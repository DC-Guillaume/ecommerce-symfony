{% extends 'base.html.twig' %}

{% block title %}Inscription - DiY District{% endblock %}

{% block content %}
    <section class="register">
		<div class="register_box">
			<div class="left">
				<div class="top_link"><a href="{{ path('home') }}">Retour à l'accueil</a></div>
                <div class="contact">

                    {{ form_start(form, {'attr': {'class': 'register-form'}} ) }}

                        <h2>Créer un compte</h2>
                        {{ form_widget(form.firstname) }}
                        {{ form_widget(form.lastname) }}
                        {{ form_widget(form.email) }}
                        {{ form_widget(form.password) }}
                        {{ form_widget(form.submit) }}
                        <div class="signin-row">
                            <p>Déjà un compte? <a href="{{ path('app_login') }}">Connectez-vous</a><p>
                        </div>
                    
                    {{ form_end(form) }}
                    
                </div>
                {% if notification_valid %}
                    <p class="email_valid">{{ notification_valid }}</p>
                {% elseif notification_invalid %}
                    <p class="email_invalid">{{ notification_invalid }}</p>
                {% endif %}
			</div>
			<div class="right">
				<div class="right-text">
					<a href="{{ path('home') }}" class"brand"><img src="/uploads/images/logodiy.png" alt="" class="logo" width="100px"></a>
					<h2>diy district</h2>
				</div>
			</div>
		</div>
	</section>
{% endblock %}
