{% extends 'base.html.twig' %}

{% block header %}{% endblock %}
{% block topbar %}{% endblock %}
{% block footer %}{% endblock %}

{% block title %}Ajouter une adresse - DiY District{% endblock %}

{% block content %}
<div class="account">
    {# <div class="account-header">
        <a href="{{ path('home')}}" class="btn">Accueil</a>
    </div> #}
    <h1>Mon compte</h1>
    <div class="parent">
        <div class="child-left">
            <a href="{{ path('account_password')}}" class="btn">Commandes</a>
            <a href="{{ path('account_address')}}" class="btn">Adresses</a>
            <a href="{{ path('account_password')}}" class="btn">Modifier mon mot de passe</a>
            <a href="{{ path('account_password')}}" class="btn">Wish List</a>
        </div>
        <div class="child-right">
            {{ form_start(form) }}
                <div class="add-address">
                    <div class="col first-label">
                        {{ form_row(form.name) }}
                    </div>
                    <div class="col">
                        {{ form_row(form.lastname) }}
                    </div>
                    <div class="col">
                        {{ form_row(form.firstname) }}
                    </div>
                    <div class="col">
                        {{ form_row(form.company) }}
                    </div>
                    <div class="col">
                        {{ form_row(form.address) }}
                    </div>
                    <div class="col">
                        {{ form_row(form.postal) }}
                    </div>
                    <div class="col">
                        {{ form_row(form.city) }}
                    </div>
                    <div class="col">
                        {{ form_row(form.country) }}
                    </div>
                    <div class="col">
                        {{ form_row(form.phone) }}
                    </div>
                    {# {% if notification %}
                        <div class="alert">{{ notification }}</div>
                    {% endif %} #}
                    <div class="auth-col-btn">
                        {{ form_row(form.submit) }}
                    </div>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>

{% endblock %}